// font settings

// body-font = 'Duru Sans'
// display-font = 'Belgrano'

p
  line-height 1.8em
  font-weight 200
  padding-bottom 1em
  a 
    color link-color 
    text-decoration none
    transition background-color 300ms ease, color 300ms ease
    &:hover
      background-color link-color
      color bg-color
h1  
  font-size 2.2em
  padding-bottom 0.4em
  font-family display-font
  font-weight 200
  text-transform uppercase
  background: -webkit-linear-gradient( heading-text-color, darken(heading-text-color, 30%) );
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
h2
  font-size 1.4em
  padding-bottom 0.5em
  font-family display-font
