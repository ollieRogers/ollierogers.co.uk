body
  font-family body-font
  background-color bg-color
  color body-text-color
  font-weight 400
  font-size body-font-size

header
  font-family display-font
  padding 50px 10px
  color #fff
  font-size 35px
  text-align center
  font-weight 600
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 1000px
  margin 0 auto
  clearfix()

.main-content
  float left
  padding-top 60px
  width:100%;

.sidebar
  float left
  width 300px
  .widget
    border-radius 3px
    border 1px solid main-color
    margin-left 20px
    background-color bg-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

iframe 
  margin-bottom 40px

footer
  width 1000px
  margin 0 auto 30px
  border-top 1px dotted main-color
  padding-top 15px
  clear both
  font-size 0.8em
  clearfix()
  .footer-nav
    float left
    a 
      padding 2px 5px
      margin 0 2px
      font-weight normal
  a.node-logo 
    float right
    background url(node-logo)
    display block
    width 93px
    height 25px
    padding 0
    margin 0 5px 0 0 
    opacity 0.7
    transition opacity 300ms ease
    &:hover 
      opacity 0.8



.work-row
  margin-bottom 40px
  clearfix()
  .work-link
    width 50%
    line-height 0
    box-sizing border-box 
    display block
    float left
    padding 0 20px 0 0 
    text-decoration none
    color body-text-color
    transition opacity 200ms ease
    &:hover 
      opacity 0.85
    + .work-link 
      padding 0 0 0 20px 
    img
      width 100%
    h2 
      text-decoration none
      line-height: 1;
      padding: 0 0 10px 0;
      font-size: 24px;




